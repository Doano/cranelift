<%= content_tag :h1, "Lista de Repositórios do projeto '#{current_project.name}'" %>

<table class="table">
  <tr>
    <th>Nome</th>
    <th>Url</th>
    <th>Auto-update</th>
    <th></th>
    <th></th>
  </tr>

<% @repositories.each do |repository| %>
  <tr>
    <td><%= link_to repository.name,[:admin, current_project, repository] %></td>
    <td><%= repository.url %></td>
    <td><%= repository.enable_autoupdate? ? 'OFF' : 'ON' %></td>
    <td><%= link_to 'Editar', edit_admin_project_repository_path(current_project, repository) %></td>
    <td><%= link_to 'Remover', [:admin, current_project, repository], confirm: 'Você tem certeza?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Repositorio', new_admin_project_repository_path, class: 'btn btn-success pull-right' %>
