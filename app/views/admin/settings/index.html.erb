<h1 class="title">Configurações</h1>

<%= form_tag admin_settings_path, class: 'form-horizontal' do %>
  <div class="form-group">
    <% s = Setting.find_or_default('login_method') %>

    <%= label_tag "setting[#{s.id}][name]", t(".#{s.name}"), class: 'col-md-3 control-label' %>
    <div class='col-md-4'>
      <%= select_tag "setting[#{s.id}][value]",
        options_for_select( [[t('.ldap'), 'ldap'], [t('.system'), 'system']], s.value ),
        class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <% s = Setting.find_or_default('default_role') %>

    <%= label_tag "setting[#{s.id}][name]", t(".#{s.name}"), class: 'col-md-3 control-label' %>
    <div class='col-md-4'>
      <%= select_tag "setting[#{s.id}][value]",
        options_for_select( Role.all.map{|r| [r.name, r.id]}, s.value ),
        class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <% s = Setting.find_or_default('allow_register') %>

    <%= label_tag "setting[#{s.id}][name]", "", class: 'col-md-3 control-label' %>
    <div class='col-md-4'>
      <label class='checkbox'>
        <%= hidden_field_tag "setting[#{s.id}][value]", 'f' %>
        <%= check_box_tag "setting[#{s.id}][value]", 't', s.value == 't' %>
        <%= t(".#{s.name}") %>
      </label>
    </div>
  </div>

  <div class="form-group">
    <% s = Setting.find_or_default('block_ip') %>

    <%= label_tag "setting[#{s.id}][name]", "", class: 'col-md-3 control-label' %>
    <div class='col-md-4'>
      <label class='checkbox'>
        <%= hidden_field_tag "setting[#{s.id}][value]", 'f' %>
        <%= check_box_tag "setting[#{s.id}][value]", 't', s.value == 't' %>
        <%= t(".#{s.name}") %>
      </label>
    </div>
  </div>

  <div class="form-group">
    <% s = Setting.find_or_default('allow_cidr') %>

    <%= label_tag "setting[#{s.id}][name]", "", class: 'col-md-3 control-label' %>
    <div class='col-md-4'>
      <label class='checkbox'>
        <%= hidden_field_tag "setting[#{s.id}][value]", 'f' %>
        <%= check_box_tag "setting[#{s.id}][value]", 't', s.value == 't' %>
        <%= t(".#{s.name}") %>
      </label>
    </div>
  </div>

  <%= submit_tag 'Salvar', class: 'btn btn-primary' %>
<% end %>
