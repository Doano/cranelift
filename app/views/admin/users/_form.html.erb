<%= simple_form_for([:admin, @user], :html => { :class => 'form-horizontal' }) do |f| %>
  <% render 'shared/form_errors', :f => f %>

  <%= f.input :login %>

  <%= f.input :password, :as => :password %>
  <%= f.input :password_confirmation, :as => :password %>

  <%= f.input :admin %>

  <%= f.association :role, :include_blank => false %>

  <%= f.input :ip_block %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>

  <%= f.input :active %>

  <%= f.input :login_type %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('back'), users_path, :class => 'btn btn-secundary pull-right' %>
  </div>
<% end %>
