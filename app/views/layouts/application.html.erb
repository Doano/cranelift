<!DOCTYPE html>
<html lag="pt-BR">
<head>
  <title>Cranelift</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="span3">
        <div class="well sidebar-nav">

          <ul nav nav-list>
            <% if current_user %>
              <%= content_tag :li, link_to('logout', logout_path, :method => :delete) %>
            <% else %>
              <%= content_tag :li, link_to('registrar', new_user_path) if setting(:allow_register) == 'true' %>
              <%= content_tag :li, link_to('login', login_path) %>
            <% end %>
            
            <%= content_tag :li, link_to('home', home_path) %>
            <%= content_tag :li, link_to('projects', projects_path) %>

            <%= content_tag :li, link_to('admin', admin_path) %>
            <ul>
              <%= content_tag :li, link_to('projects', admin_projects_path) %>
              <%= content_tag :li, link_to('users', admin_users_path) %>
              <%= content_tag :li, link_to('ips', admin_ips_path) %>
              <%= content_tag :li, link_to('logs', admin_logs_path) %>
              <%= content_tag :li, link_to('settings', admin_settings_path) %>
            </ul>
          </ul>
        </div><!--/.well -->
      </div><!--/span-->

      <div class="span9">
        <div class="messages">
          <% [:notice, :info, :warning, :error, :alert].each do |type| %>
            <% if flash[type] %>
              <%= content_tag(:div, flash.now[type], :class => "flash #{type}") %>
              <% flash[type] = nil %>
            <% end %>
          <% end %>
        </div>
        
        <%= yield %>
      </div><!--/span-->

    </div><!--/row-->
  </div>
</body>
</html>
