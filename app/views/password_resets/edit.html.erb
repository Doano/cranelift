<h1>Escolha uma Nova Senha</h1>

<%= simple_form_for(@user, :url => password_reset_path(params[:id]), :html => { :class => 'form-horizontal' } ) do |f| %>
  
  <%= f.input :password %>
  <%= f.input :password_confirmation %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary', :value => 'Finalizar' %>
  </div>
<% end %>
