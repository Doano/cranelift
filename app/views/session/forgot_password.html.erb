<div class="navigation">
  <ul class="nav nav-pills">
    <li>
      <%= link_to 'ENTRAR', login_path %>
    </li>
    <% unless deny_signup? %>
      <li>
        <%= link_to t('.sign_up'), signup_path %>
      </li>
    <% end %>
  </ul>
</div>

<h3 class='title'>Recuperar senha</h3>
<p>Preencha o formulário para que sejam enviadas instruções de como mudar sua senha.</p>

<%= form_tag forgot_password_path do %>
  <div class="form-group">
    <%= text_field_tag :email, params[:email], placeholder: 'Email', class: 'form-control' %>
  </div>

  <div class="form-actions">
    <%= submit_tag 'Enviar', class: 'btn btn-primary' %>
  </div>
<% end %>
