<div class="navigation">
  <ul class="nav nav-pills">
    <li class="active"><a href="#">ENTRAR</a></li>
    <% unless deny_signup? %>
      <li>
        <%= link_to t('.sign_up'), signup_path %>
      </li>
    <% end %>
  </ul>
</div>

<%= form_tag login_path, :id => 'new-session' do %>
  <div class="form-group">
    <%= text_field_tag :login, nil, class: 'form-control', placeholder: t('.login') %>
  </div>

  <div class="form-group">
    <%= password_field_tag :password, nil, class: 'form-control', placeholder: t('.password') %>

    <div class="reset-password">
      Esqueceu a senha? <%= link_to t('.reset_password'), forgot_password_path %>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag t('.sign_in'), class: 'btn btn-primary' %>
  </div>
<% end %>
